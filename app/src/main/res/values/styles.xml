<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBtnGradCenter</item>
        <item name="colorPrimaryDark">@color/colorBtnGradStart</item>
        <item name="colorAccent">@color/colorBtnGradEnd</item>
    </style>

    <style name="tradrFontStyle">
        <item name="android:textColor">#FDFDFB</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="tradrBtnStyle">
        <item name="android:soundEffectsEnabled">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tradr_button_press</item>
    </style>

</resources>
