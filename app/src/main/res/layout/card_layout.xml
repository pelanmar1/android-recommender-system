<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="@color/colorBtnGradEnd"
    android:id="@+id/backLayout"
    android:layout_height="match_parent">
    <TextView
        android:backgroundTint="@color/colorBtnGradEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_text"
        android:textSize="30sp"
        android:textColor="@color/colorTradrWhite"
        android:gravity="center_horizontal" />
    <ImageView
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:id="@+id/productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/decisionLayout"
        android:background="@color/colorBtnGradEnd">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_thumb_down_white_48dp"
            />

        <ImageView
            android:src="@drawable/ic_thumb_up_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>





</RelativeLayout>